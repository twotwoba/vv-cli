{
	"name": "your extension name",
	"version": "0.0.1",
	"description": "a chrome extension ...",
	"license": "MIT",
	"author": {
		"name": "xxx",
		"email": "xxx@gmail.com"
	},
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run css\" \"vite build --watch --mode development\"",
		"build": "npm run css:build && vite build --mode production",
		"css": "npx @tailwindcss/cli -i src/assets/css/tailwind.css -o src/assets/css/output.css --minify --watch",
		"css:build": "npx @tailwindcss/cli -i src/assets/css/tailwind.css -o src/assets/css/output.css --minify",
		"preview": "vite preview",
		"lint": "oxlint",
		"lint:fix": "oxlint --fix",
		"format": "oxfmt --write .",
		"format:check": "oxfmt --check ."
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.3",
		"@tailwindcss/vite": "^4.1.17",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"motion": "^12.23.12",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.17"
	},
	"devDependencies": {
		"@crxjs/vite-plugin": "^2.2.1",
		"@tailwindcss/cli": "^4.1.17",
		"@types/chrome": "^0.1.1",
		"@types/node": "^22.18.1",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react-swc": "^4.2.2",
		"concurrently": "^9.2.0",
		"globals": "^16.3.0",
		"oxfmt": "^0.24.0",
		"oxlint": "^1.39.0",
		"tw-animate-css": "^1.3.8",
		"typescript": "~5.7.3",
		"vite": "^7.2.6",
		"vite-plugin-zip-pack": "^1.2.4",
		"vite-tsconfig-paths": "^5.1.4"
	}
}
