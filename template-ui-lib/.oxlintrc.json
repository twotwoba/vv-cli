{
    "$schema": "https://oxc.rs/schema/oxlintrc.json",
    "plugins": ["vue", "typescript"],
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "no-console": "warn",
        "no-debugger": "error",
        "eqeqeq": ["error", "always"],
        "no-var": "error",
        "prefer-const": "error",
        "prefer-arrow-callback": "error",
        "no-duplicate-imports": "error"
    },
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    }
}
